<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD1DC"
    android:layout_centerHorizontal="true"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Welcome to Guess the Phrase!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"

        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_picture"
        android:src="@drawable/main_screen_picture"
        android:layout_below="@+id/main_title"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_picture"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Instructions: You will be shown different emoji combinations and be asked to enter your best guess to the phrase it is describing!"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="30dp"

        android:textSize="20sp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameET"
        android:fontFamily="casual"
        android:hint="Enter your name"
        android:inputType="text"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/instructions"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"


        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterBT"
        android:text="ENTER"
        android:textSize = "30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:layout_below="@id/nameET"


        />


</RelativeLayout>




